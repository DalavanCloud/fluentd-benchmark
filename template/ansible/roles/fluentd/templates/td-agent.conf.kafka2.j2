<source>
  @type forward
  port 24224
  bind 0.0.0.0
</source>

<match benchmark.data>
  @type kafka
  default_topic benchmark.data
  brokers kafka:9092
  zookeeper kafka:2181
  required_acks -1
  <buffer>
    @type memory
    flush_interval 1s
    flush_thread_count 3
  </buffer>
  <format>
    @type json
  </format>
</match>
